    <link href="~/lib/bootstrap/dist/css/bootstrap-flatly.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/9c33572fdb.js" crossorigin="anonymous"></script>
</head>
<body class="gradient-1">
    <script>
